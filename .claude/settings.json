{
  "model": "opus",
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Edit",
      "Write",
      "Read"
    ],
    "deny": [
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~/*:*)",
      "Bash(sudo rm -rf:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=* of=/dev/*:*)"
    ],
    "ask": [
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/notification-speak.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/damage-control/bash-tool-damage-control.py",
            "timeout": 5,
            "statusMessage": "Damage control: checking command"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/check-repo-freshness.sh",
            "statusMessage": "Checking repo freshness"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/damage-control/edit-tool-damage-control.py",
            "timeout": 5,
            "statusMessage": "Damage control: checking path"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/check-repo-freshness.sh",
            "statusMessage": "Checking repo freshness"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/damage-control/write-tool-damage-control.py",
            "timeout": 5,
            "statusMessage": "Damage control: checking path"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccline",
    "padding": 0
  }
}
